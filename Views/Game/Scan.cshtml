@model StepUp.Models.ScanInputViewModel

@{
    ViewData["Title"] = "QR-Scan";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">

            <h2 class="text-center mb-3">QR-Scan</h2>

            <p class="text-muted small text-center">
                Wenn ihr einen bestehenden Teamnamen habt, gebt ihn bitte exakt gleich ein.
            </p>

            <p class="text-muted small text-center mb-4">
                Falls dies euer erster Scan ist, könnt ihr jetzt euren Teamnamen festlegen.
            </p>

            <form asp-action="Scan" method="post" class="mt-3">
                <input type="hidden" asp-for="PoiId" />

                <div class="mb-3">
                    <label asp-for="TeamName" class="form-label fw-semibold">Teamname</label>
                    <input asp-for="TeamName"
                           class="form-control form-control-lg"
                           placeholder="Teamname eingeben…"
                           autocomplete="off" />
                    <span asp-validation-for="TeamName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 mt-2">
                    Punkt holen
                </button>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}